# Example terraform.tfvars for tenant deployment
# Copy this file to terraform.tfvars and update the values
# Note: Deploy infrastructure first to get the MariaDB connection details

# MariaDB cluster connection details (from infrastructure deployment)
mariadb_host = "your-mariadb-cluster.ionos.com"  # Get from infrastructure outputs
mariadb_admin_user     = "admin"
mariadb_admin_password = "your-secure-mariadb-password"

# Authentik SSO configuration  
authentik_client_secret = "your-authentik-client-secret"

# Optional: Override default URLs if different
# authentik_issuer_url = "https://your-authentik.domain.com"