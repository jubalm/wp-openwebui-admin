# Example terraform.tfvars for IONOS infrastructure deployment
# Copy this file to terraform.tfvars and update the values

# IONOS Cloud configuration
ionos_token   = "your-ionos-cloud-api-token"
datacenter_id = "12345678-1234-1234-1234-123456789012"
lan_id        = "1"
location      = "de/fra"

# MariaDB cluster configuration
cluster_name    = "wp-openwebui-mariadb"
mariadb_version = "10.6"
instances       = 1
cores          = 2
ram            = 4096
storage_size   = 20

# Security configuration
allowed_cidr = "10.0.0.0/8"

# Database credentials
mariadb_admin_user     = "admin"
mariadb_admin_password = "your-secure-mariadb-password"

# Maintenance configuration
maintenance_day  = "Sunday"
maintenance_time = "03:00:00"