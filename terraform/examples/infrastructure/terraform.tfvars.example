# Example terraform.tfvars for IONOS infrastructure deployment
# Copy this file to terraform.tfvars and update the values

# IONOS Cloud configuration
ionos_token = "your-ionos-cloud-api-token"
lan_id      = "1"
location    = "de/fra"

# PostgreSQL cluster configuration for Authentik
postgres_cluster_name    = "authentik-postgres"
postgres_version         = "15"
postgres_instances       = 1
postgres_cores          = 2
postgres_ram            = 4096
postgres_storage_size   = 20
postgres_storage_type   = "HDD"

# Security configuration
allowed_cidr = "10.0.0.0/8"

# PostgreSQL credentials
postgres_admin_username = "admin"
postgres_admin_password = "your-secure-postgres-password"

# Maintenance configuration
maintenance_day  = "Sunday"
maintenance_time = "03:00:00"